local closeste = {}
local Players = game:GetService("Players")
local workspace = game:GetService("Workspace")

function closeste.ClosestThing(Object)
    local closest_Entity = nil
    local max_distance = math.huge

    -- Ensure 'workspace.Alive' exists
    local aliveFolder = workspace:FindFirstChild("Alive")
    if not aliveFolder then
        warn("No 'Alive' folder found in the workspace.")
        return nil
    end

    -- Loop through all entities in 'workspace.Alive'
    for _, entity in aliveFolder:GetChildren() do
        if entity.Name ~= Players.LocalPlayer.Name and entity:FindFirstChild("HumanoidRootPart") then
            local distance = (Object.Position - entity.HumanoidRootPart.Position).Magnitude
            if distance < max_distance then
                closest_Entity = entity
                max_distance = distance
            end
        end
    end

    return closest_Entity
end

return closeste
